<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFB030"
    android:layout_height="match_parent"
    tools:context=".View.SplashActivity">
    <ImageView
        android:layout_width="0dp"
        android:id="@+id/splashImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_log_in"
        app:layout_constraintTop_toBottomOf="@id/splashText"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/splashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textFontWeight="@integer/google_play_services_version"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:text="Welcome to your ToDO\n Let's get into"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toTopOf="@id/splashImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>